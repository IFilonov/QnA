<% answer_id = ".answer-#{@answer.id}" %>
<% if @answer.errors.present? %>
  $('<%= answer_id + "-errors" %>').prepend('<%= render 'shared/errors', resource: @answer %>');
<% else %>
  $('.flash').html('');
  $('.flash').prepend('<%= flash_messages %>');
  <% flash.discard %>
  $("<%= answer_id %>").remove();
<% end %>
