$('.question-errors').html('<%= render 'shared/errors', resource: @question %>')
<% if @question.persisted? %>
  $('#question-update-submit').hide();
  $('.question-edit-link').show();
  $('#question-file-label').hide();
  $('#question-file-field').hide();
  $('#Links').hide();
  $('#question-body').attr("readonly", true);
  $('#question-title').attr("readonly", true);
  $('.question_files').html('');
  $('.question_files').append("<%= j render 'files' %>");
  $('.question_links').html('');
  $('.question_links').append("<%= j render 'links' %>");
  $('.question_links').show();
<% end %>
